# ===== CONFIGURACIÓN LOCAL COMPLETA - INDIANA USADOS =====
# Copia este archivo como .env.local en la raíz del proyecto y ajusta las URLs

# ===== API CONFIGURATION =====
# Backend real (cambiar cuando tengas backend)
VITE_API_URL=https://tu-backend-real.com/api

# Postman Mock URLs (actuales)
VITE_POSTMAN_MOCK_URL=https://c65a35e4-099e-4f66-a282-1f975219d583.mock.pstmn.io
VITE_POSTMAN_DETAIL_URL=https://0ce757d8-1c7a-4cec-9872-b3e45dd2d032.mock.pstmn.io

# Mock local (futuro)
VITE_MOCK_API_URL=http://localhost:3000/api

# ===== FEATURES FLAGS =====
# Cambia estos valores para cambiar de entorno rápidamente

# true = usar mock, false = usar backend real
VITE_USE_MOCK_API=true

# true = usar Postman Mock, false = usar mock local (cuando esté implementado)
VITE_USE_POSTMAN_MOCK=true

# ===== CONFIGURACIÓN DE API =====
# Timeout en milisegundos
VITE_API_TIMEOUT=5000

# Número de reintentos
VITE_API_RETRIES=3

# Delay entre reintentos en milisegundos
VITE_API_RETRY_DELAY=1000

# ===== AUTHENTICATION =====
VITE_AUTH_ENABLED=true
VITE_AUTH_STORAGE_KEY=indiana_auth_token

# ===== PERFORMANCE =====
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true

# ===== DEBUGGING =====
# Solo en desarrollo
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_ERROR_BOUNDARIES=true

# ===== IMAGES =====
VITE_IMAGE_OPTIMIZATION=true
VITE_USE_CDN=false
VITE_CDN_URL=https://tu-cdn.com

# ===== CONTACT =====
VITE_CONTACT_EMAIL=info@indianausados.com
VITE_CONTACT_WHATSAPP=5491112345678

# ===== ENVIRONMENT =====
VITE_ENVIRONMENT=development 